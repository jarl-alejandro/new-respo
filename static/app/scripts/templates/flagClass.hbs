<div class="card aviso">
    <article class="aviso-falta--clase">
        <div class="aviso-title">
            <h3>Clase de  {{ lessons.nameClass }}</h3>
        </div>
        <div class="aviso-calendar">
            <div class="calendar-spiral">
                <span class="espiral-circle"></span>
                <span class="espiral-circle"></span>
            </div>
            <div class="calendar-mes">{{ fecha.mes }}</div>
            <div class="calendar-day">
                <span class="day-numer">{{ fecha.dia }}</span>
                <span class="day-text">{{ fecha.semana }}</span>
            </div>
        </div>
        <div class="aviso-reloj">
            <div class="reloj-count-day">
                <span class="count-day-number dia-{{ id_leccion }}-reloj"></span>
                <span class="count-day-text">d√≠as</span>
            </div>
            <div class="reloj-count-hora">
                <span class="count-hora-number hora-{{ id_leccion }}-reloj"></span>
                <span class="count-hora-text">horas</span>
            </div>
            <div class="reloj-count-minuto">
                <span class="count-minuto-number minuto-{{ id_leccion }}-reloj"></span>
                <span class="count-minuto-text">min</span>
            </div>
            <div class="reloj-count-segundo">
                <span class="count-segundo-number segundo-{{ id_leccion }}-reloj"></span>
                <span class="count-segundo-text">seg</span>
            </div>
        </div>
        <div class="aviso-ingresar none">
            <a href="/lessons/{{ lessons._id }}">Ingresar a clase</a>
        </div>
    </article>
</div>

