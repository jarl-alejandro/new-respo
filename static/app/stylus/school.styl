.flex
    display flex
.flex-end
    justify-content flex-end
.space-right
    margin-right 1em
.space-bottom
    margin-bottom 1em
.BotonCrear
    text-decoration none
    background #0097A7
    color #F0F0F0
    font-weight bold
    padding .2em 1em
    box-shadow 0px 1px 1.5px rgba(black, 0.5)
    &:hover
        background rgba(174,184,191,0.82)
        box-shadow 0px 3px 4.5px rgba(black, 0.5)
    i
        margin-left .4em
        display inline-block
        vertical-align top

.avatarTeacher
