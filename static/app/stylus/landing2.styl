@import "nib"
@import "normalize.styl"
@import "color.styl"

@font-face {
  font-family: 'Pacifico';
  font-style: normal;
  font-weight: 400;
  src: local('Pacifico Regular'), local('Pacifico-Regular'), url(../fonts/pacifico.woff2) format('woff2');
  unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2212, U+2215, U+E0FF, U+EFFD, U+F000;
}
.pacifico
  font-family 'Pacifico', cursive

.roboto
  font-family 'Roboto', sans-serif
.register-text
  color #fff
  background #dd2729
  font-size 1.5em
  margin 0
  margin-left -2em
  margin-top 1em
  padding 2%
  border-radius 5px

.registrar-icon
  width 8em
  position absolute
  top -6em
  left -7em

.authors
  margin-top -2em
  text-align center
  background gray_color
  width 100%
  height 25em

.auhors-foto
  width 200px
  height 200px
  border-radius 50%
  box-shadow 0 3px 6px rgba(black,0.16),0 3px 6px rgba(black,0.23)
  border 4px solid cyan_claro

.authentication
  a
    color white
    text-decoration none
    position relative

.login-icon
  width 7em
  border-radius 50%
  margin-top -4em
  box-shadow 0 1px 1.5px rgba(black,0.5)
.login-text
  position absolute
  top -3em
  left -6px
  width 13em
  color black
  font-weight bold
  font-size: 1.2em
.info
  font-size 1.3em
  font-style italic
  padding 0 .5em

.inicar
  position absolute
  top 15em
  left 59em

.inscribite
  position absolute
  top 15em
  left 19em

.front
  background url("../img/12153-NOC0JL.jpg")
  background-size cover
  background-position center
  height 55em
  width 100%

.front-title
  h1
    color red
    text-shadow: 0px 1px 1.5px rgba(black ,0.5)
    width 20em
    text-align center
    margin 0
    padding 0
    font-size 4em
    font-weight normal
  p
    background white
    box-shadow 0px 1px 1.5px rgba(black,.5)
    border-radius 1em
    font-size 2.1em
    position relative
    width 22em
    left 10em
    text-align center
    font-weight 100
    top 20em
    z-index 1
    color rgba(19, 167, 38, 0.94)
    text-shadow 0px 1px 1.5px rgba(black, 0.5)

.team-name
  font-size 1.1em
  font-weight bold

.team-title
  position relative
  top 1.5em
  font-size 2em
  color #333

.team-info
  text-align center
  font-style italic
  color #333
  font-size 1em

//video
.tuto
  background white
  video
    margin-top 1em
    width 46em
    position relative
    left 21.5em

.title-tuto
  margin 0
  padding 0
  font-size 2.5em
  color cyan_oscuro
  font-style italic
  font-weight 100
  text-align center
  padding-top 2em

.fe-alegria-icon
  width 8em
  position absolute
  right 0em
  top 0em

.Team
  img
    width 15em
    height 15em
    border-radius 50%
    display block
    margin 0 auto
    margin-top 5em
    border .2em solid red
    box-shadow 0px 1px 3px rgba(black, 0.6)
    margin-bottom 1em

.TeamInfo
  margin-bottom 1em
  p
    display flex
    justify-content center
    font-size 1.2em
    margin 0
    font-weight bold
