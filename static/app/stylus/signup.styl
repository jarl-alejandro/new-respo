.card
  color rgba(black, 0.84)
  background #FFFFFF
  box-shadow 0 1px 1.5px rgba(black, 0.5)

.register-btn
  display block
  margin 0 auto
  background cyan_oscuro
  border none
  padding .5em
  color white
  border-radius 3px
  box-shadow inset 0 -.2em rgba(0,0,0,0.3)
  &:hover
    background cyan_claro

.wrapper
  position relative
  top 2em
  width 100%

.form-wrapper
  width 340px
  margin 60px auto
  padding 24px
  background #fff
  //box-shadow 2px 2px 2px rgba(0, 0, 0, 0.1)

.form-group
  position relative
  width 100%
  margin-bottom 1em

.form-group input
  position relative
  width 100%
  background 0 0
  padding 7px 0 10px
  font-size 15px
  line-height 1.4
  font-weight 500
  border 1px solid rgba(0, 0, 0, 0.08)
  border-width 0 0 1px
  box-shadow none
  z-index 1

.form-group input
  &:focus
    outline 0
    border-bottom 2px solid cyan_oscuro
    transition all 0.5s ease
    line-height 0
    font-weight 300
    font-size 12px
    line-height 24px
    margin 0

.form-group::after
  content ""
  position absolute
  width 0
  height 2px
  bottom 0
  left 50%
  z-index 1000
  background rgba(0, 0, 0, 0.08)
  transition all .3s ease
