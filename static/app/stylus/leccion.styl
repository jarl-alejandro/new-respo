// Inputs
.input__leccion
  position relative
  width 72%
  background 0 0
  padding 7px 0 10px
  font-size 15px
  line-height 1.4
  font-weight 500
  border 1px solid rgba(0, 0, 0, 0.08)
  border-width 0 0 1px
  box-shadow none
  z-index 1
  transition all ease .3s !important

.input__leccion
  &:focus
    outline 0
    border-bottom 2px solid rojo_porque
    transition all ease .3s
    line-height 0
    font-weight 300
    font-size 12px
    line-height 24px
    margin 0

.input__leccion::after
  content ""
  position absolute
  width 0
  height 2px
  bottom 0
  left 50%
  z-index 1000
  background rgba(black, 0.08)
  transition all .3s ease

// Checks radio buttons customs
.form-checks
    p
        margin-left 1em
    input[type="radio"]
    input[type="checkbox"]
        display none
        &:checked + label
            padding 5px 15px
            background rojo_porque
            border-radius 2px
            color #fff
            &:before
                display none
    input[type="checkbox"] + label
        &:before
            border-radius 3px
    label
        color #0074D9
        cursor pointer
        display inline-block
        position relative
        padding 5px 15px 11px 51px
        font-size 1em
        border-radius 5px
        transition all ease .3s
        &:hover
            background rgba(0, 116, 217, 0.1)
        &:before
            content ""
            display inline-block
            width 17px
            height 17px
            border-radius 50%
            background none
            border 3px solid #0074D9
            position absolute
            left 15%
