.toas__info
    background #444444
    color white
    position absolute
    right 5em
    bottom 11em
    border-radius 1px
    text-align center
    box-shadow 0px 1px 1.5px black
    height 3em
    width 24em
    display flex
    align-items center
    justify-content center
.aviso-ingresar
    a
        background #db5656
        color white !important
        font-weight bold
        box-shadow 0px 2px 2.5px rgba(0,0,0,0.5)
        border-radius 3px
        display flex
        width 9em
        justify-content center
        height 2em
        align-items center
        position relative
        transition all ease 1s
        &:hover
                box-shadow 6px 3px 3.5px rgba(0,0,0,0.5),
                            9em 0px rgba(244, 143, 177, 0.93) inset !important

.aviso-falta--clase
    display flex
    flex-wrap wrap
    justify-content center
    align-items center
.aviso-title
    width 100%
.aviso-reloj
    display flex
    margin-left 1em
.reloj-count-day
.reloj-count-hora
.reloj-count-minuto
.reloj-count-segundo
    width 3.5em
    text-align center
    color #4d4d4d
    font-weight bold
    display flex
    flex-wrap wrap
    justify-content center

.count-day-number
.count-hora-number
.count-minuto-number
    font-size 2em
    position relative
    &:after
        content ":"
        position absolute
        left 1.3em
.count-segundo-number
    position relative
    font-size 2em
.count-day-text
.count-hora-text
.count-minuto-text
.count-segundo-text
    font-size 14px
.aviso-calendar
    width 65px
    font-size 11px
    color #fff
    text-transform uppercase
    text-align center
    font-weight 700
.calendar-spiral
    display flex
    justify-content space-around
.espiral-circle
    border-radius 50% 50% 0 0
    background #db5656
    width 8px
    height 8px
.calendar-mes
    background #db5656
    padding 2px
    font-size 12px
.calendar-day
    background white
    color black
    border-radius 0 0 2px 4px
    box-shadow 0px 1.5px 1px rgba(0,0,0,0.5)
    padding 2px
    display flex
    justify-content center
    flex-wrap wrap
.day-numer
    font-size 24px
.day-text
    font-weight normal
.BoletinLayout
    display flex
    justify-content space-between
    flex-wrap wrap
.boletin-grid
    background #f0f0f0
    border 1px solid #c3c3c3
    width 12em
    height 3em
    display flex
    justify-content center
    align-items center
    box-shadow 0px 0px 4.5px rgba(0,0,0,0.5)
    border-radius 1px
    font-weight bold
    margin .5em
    cursor pointer
    span
        margin-left .2em
.ListadoEstudiante
    display flex
    justify-content space-around
    align-items center
    transition all .3s
    &:hover
        background #5996cd
        color #F0F0F0
    p
        width 25em
        margin 1em
    img
        background white
        margin-left 1em
        box-shadow 0px 1px 1.5px rgba(black, 0.5)

.cerrar-notas
.cerrar_listado
    color #F0F0F0
    font-weight bold
    padding .5em 1em
    background #D2527F
    box-shadow 0px 1px 1.5px rgba(0, 0, 0, 0.5)
    border 0

#mis__notas-btn
#lista__estudinate-btn
    color #F0F0F0
    font-weight bold
    border 0
    background blue_gray
    box-shadow 0px 1px 1.5px rgba(0, 0, 0, 0.5)

#mis__notas-btn
    padding .5em 2em
#lista__estudinate-btn
    padding .5em 1em
    margin 1em

.notas-paper__actions
.lista-estudiantes__actions
    display flex
    justify-content center
    margin-bottom .5em
.LayoutCurso
    display flex
    margin-top 7em
    justify-content space-around
    margin-left 5em

.AsideCurso
    width 23em

.course-group
  width 100%
  padding-bottom .5em
  margin-bottom 1em

  ul
    list-style none
.title-group
  background cyan_oscuro
  color white
  text-align center
  margin 0

.salir
  background cyan_oscuro
  padding 1em
  color white
  position absolute
  top 20em
  left 62em
  text-decoration none
  border-radius 3px
  box-shadow inset 0 -.2em rgba(black .3)

.bitacora-box-course
  width 50em

.course-bi
  background red

.no-margin
    margin 0
.aviso
.aviso_teacher
  background-image url(../img/meeting_09.jpg)
  background-position center
  background-size cover
  padding .3em
  border-radius 5px
  margin-bottom 1.5em
  h3
    text-align center
    margin 0
    color #E91E63
    font-size 3em
    text-shadow 0px 1px 1.5px black
    text-transform capitalize
  a
    color #444444
    text-decoration none
    &:hover
      text-decoration underline

.bitacora-title
  text-align center
  background cyan_oscuro
  color white
  h2
    padding 4px

//bitacoras
.bitacora
  padding .7em

.table
  width 100%
  tr
  td
    border 2px solid cyan_oscuro
    padding 2px
    margin 0 .5em

#notas-paper
    position absolute
    top 10em
    left 8em
    width 55%
    background #fffbec
    color #666
    display none

#lista-estudiantes
    display none
    background #fef1c3
    position absolute
    top 10em
    left 8em
    width 55%
    color #666
.ListadoEstudiantesLayout
    background linear-gradient(#fef1c3 98%, #e0b8b8 98%)
    background-size 100% 52px
    margin 1em 0em
