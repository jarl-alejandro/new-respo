.ListadoEstudiante
    display flex
    justify-content space-around
    align-items center
    border-bottom 1px solid #c3c3c3
    padding-bottom 1em
    margin 0.3em .8em
    &:last-child
        border 0
    p
        width 25em
        margin 1em
    img
        box-shadow 0px 1px 1.5px rgba(black, 0.5)

.cerrar-notas
.cerrar_listado
    color #F0F0F0
    font-weight bold
    padding .5em 1em
    background #D2527F
    box-shadow 0px 1px 1.5px rgba(0, 0, 0, 0.5)
    border 0

#mis__notas-btn
#lista__estudinate-btn
    color #F0F0F0
    font-weight bold
    border 0
    background blue_gray
    box-shadow 0px 1px 1.5px rgba(0, 0, 0, 0.5)

#mis__notas-btn
    padding .5em 2em
#lista__estudinate-btn
    padding .5em 1em
    margin 1em

.notas-paper__actions
.lista-estudiantes__actions
    display flex
    justify-content center
    margin-bottom .5em
.LayoutCurso
    display flex
    margin-top 7em
    justify-content space-around
    margin-left 5em

.AsideCurso
    width 23em

.course-group
  width 100%
  padding-bottom .5em
  margin-bottom 1em

  ul
    list-style none
.title-group
  background cyan_oscuro
  color white
  text-align center
  margin 0

.salir
  background cyan_oscuro
  padding 1em
  color white
  position absolute
  top 20em
  left 62em
  text-decoration none
  border-radius 3px
  box-shadow inset 0 -.2em rgba(black .3)

.bitacora-box-course
  width 50em

.course-bi
  background red

.no-margin
    margin 0
.aviso
  background color_red
  padding .3em
  border-radius 5px
  margin-bottom 1.5em
  h2
    font-size 20px
    text-align center
  h3
    text-align center

  a
    color white
    text-decoration none
    &:hover
      text-decoration underline
  &:hover
    background #F4413B

.bitacora-title
  text-align center
  background cyan_oscuro
  color white
  h2
    padding 4px

//bitacoras
.bitacora
  padding .7em

.table
  width 100%
  tr
  td
    border 2px solid cyan_oscuro
    padding 2px
    margin 0 .5em

#notas-paper
    position absolute
    top 10em
    left 8em
    width 55%
    background #fffbec
    color #666
    display none

#lista-estudiantes
    display none
    position absolute
    top 10em
    left 8em
    width 55%
    background #fffbec
    color #666
